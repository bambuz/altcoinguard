
<div class="col-md-4">
	<%= form_for [:admin, @coin] do |f| %>

		<div class="form-group">
			<%= f.label :thumbnail %>
			<%= f.text_field :thumbnail, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label :name %>
			<%= f.text_field :name, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.submit "Add new coin", class: "btn btn-success" %>
			<%= link_to "Cancel", admin_coins_url, class: "btn btn-danger" %>
		</div>

	<% end %>
</div>